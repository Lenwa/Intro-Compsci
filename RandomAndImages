import java.util.Random;
import javax.swing.ImageIcon;
import javax.swing.JOptionPane;

public class SpellingGame {
	
	public static void main(String[] args){
		for(int i = 0; i <= 14; i++);
		
		Object ans0, ans1, ans2, and3, ans4, ans5, ans6, ans7, ans8, ans9, ans10, ans11;
		
		String ball = "ball";
		String bear = "bear"; 
		String bridge = "bridge"; 
		String clock = "clock";
		String dog = "dog"; 
		String fire = "fire";
		String four = "four";
		String lake = "lake";
		String moon = "moon";
		String rocket = "rocket";
		String ten = "ten";
		String three = "three";
		String tree = "tree";
		String truck = "truck";
		
	
		Random rand = new Random();
		int choice = rand.nextInt(14)+1;
		
		
		if(choice == 0){
			ans0 = JOptionPane.showInputDialog(null, "Spell what you see", 
			"Question1", JOptionPane.PLAIN_MESSAGE, 
			new ImageIcon("Images/" + ball + ".jpg"), 
			null, "Enter your answer here");
		
			if(ans0.equals(ball)){
				JOptionPane.showMessageDialog(null, "Sorry, that's not correct");
			}
			else{
				JOptionPane.showMessageDialog(null, "GREAT JOB");
			}
		}
			
		if(choice == 1){
			ans1 = JOptionPane.showInputDialog(null, "Spell what you see", 
			"Question1", JOptionPane.PLAIN_MESSAGE, 
			new ImageIcon("Images/" + bear + ".jpg"), 
			null, "Enter your answer here");
			
			
			if(ans1.equals(bear)){
				JOptionPane.showMessageDialog(null, "Great Job! That's right!");
			}
			else{
				JOptionPane.showMessageDialog(null, "Incorrect, next time!");
			}
		}
	}
}
